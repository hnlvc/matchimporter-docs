{
  "openapi": "3.0.1",
  "info": {
    "title": "Dblv.MatchImporter.API.App",
    "version": "1.0"
  },
  "paths": {
    "/api/hc": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Health Check endpoint.",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/matches": {
      "post": {
        "tags": [
          "Match"
        ],
        "summary": "Creates a match and saves it to the cloud storage.",
        "requestBody": {
          "description": "Request contract containing the needed information.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMatchRequestContract"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMatchRequestContract"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMatchRequestContract"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Accepted"
          }
        }
      }
    },
    "/api/matches/{matchId}": {
      "get": {
        "tags": [
          "Match"
        ],
        "summary": "Gets a match by the given ID",
        "parameters": [
          {
            "name": "matchId",
            "in": "path",
            "description": "ID of the match to get",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/matches/{matchId}/pdf": {
      "get": {
        "tags": [
          "Match"
        ],
        "summary": "Gets the match report PDF file.",
        "parameters": [
          {
            "name": "matchId",
            "in": "path",
            "description": "ID of the match.",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/matches/{matchId}/json": {
      "get": {
        "tags": [
          "Match"
        ],
        "summary": "Gets the match JSON file.",
        "parameters": [
          {
            "name": "matchId",
            "in": "path",
            "description": "ID of the match.",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/contacts": {
      "post": {
        "tags": [
          "TeamContacts"
        ],
        "summary": "Creates a single team contact in the contacts database.",
        "requestBody": {
          "description": "Request Contract containing the information needed for creation.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTeamContactRequestContract"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTeamContactRequestContract"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTeamContactRequestContract"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "TeamContacts"
        ],
        "summary": "Gets all team contacts.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AllTeamContactsResponseContract"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AllTeamContactsResponseContract"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AllTeamContactsResponseContract"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/contacts/{contactId}": {
      "get": {
        "tags": [
          "TeamContacts"
        ],
        "summary": "Gets a contact by their ID.",
        "operationId": "GetContactById",
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID of the contact to search for.",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "TeamContacts"
        ],
        "summary": "Updates a contact by their ID.",
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID of the contact to update.",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "A Dblv.MatchImporter.API.Contracts.Requests.UpdateTeamContactRequestContract containing the information to update",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTeamContactRequestContract"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTeamContactRequestContract"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTeamContactRequestContract"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamContactResponseContract"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "TeamContacts"
        ],
        "summary": "Deletes a contact by given ID",
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID of the contact to delete.",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AllTeamContactsResponseContract": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id of that contact in the contacts database.",
            "format": "int32"
          },
          "teamName": {
            "type": "string",
            "description": "Name of the team that contact is responsible for.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Response contract for getting all team contacts."
      },
      "CreateMatchRequestContract": {
        "type": "object",
        "properties": {
          "matchJson": {
            "description": "JSON containing the event as generated by Badminton Umpire Panel..",
            "nullable": true
          },
          "pdfFile": {
            "type": "string",
            "description": "PDF game report sheet as Base64 string.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Contract for adding a new Match."
      },
      "CreateTeamContactRequestContract": {
        "required": [
          "clubName",
          "firstName",
          "lastName",
          "mailAddress",
          "teamName"
        ],
        "type": "object",
        "properties": {
          "teamName": {
            "minLength": 1,
            "type": "string",
            "description": "Name of the team the contact is contact person for."
          },
          "clubName": {
            "minLength": 1,
            "type": "string",
            "description": "Name of the club the team is from"
          },
          "salutation": {
            "type": "string",
            "description": "Greeting the contact prefers in German language.",
            "nullable": true,
            "example": "Frau"
          },
          "firstName": {
            "minLength": 1,
            "type": "string",
            "description": "First name of the contact person."
          },
          "lastName": {
            "minLength": 1,
            "type": "string",
            "description": "Last name of the contact person."
          },
          "mailAddress": {
            "minLength": 1,
            "type": "string",
            "description": "Mail address the contact person prefers to receive mails from us."
          }
        },
        "additionalProperties": false,
        "description": "Contract for creating a team contact person."
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "TeamContactResponseContract": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id of that contact in the contacts database.",
            "format": "int32"
          },
          "teamName": {
            "type": "string",
            "description": "Name of the team that contact is responsible for.",
            "nullable": true
          },
          "clubName": {
            "type": "string",
            "description": "Name of the club the team is from.",
            "nullable": true
          },
          "salutation": {
            "type": "string",
            "description": "Salutation in German language the contact desires.",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "description": "First name or names of the contact",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "description": "Last name of the contact",
            "nullable": true
          },
          "mailAddress": {
            "type": "string",
            "description": "Mail address where the contact wishes to receive emails.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Response contract for a single team contact."
      },
      "UpdateTeamContactRequestContract": {
        "type": "object",
        "properties": {
          "teamName": {
            "type": "string",
            "description": "Name of the team the contact is contact person for.",
            "nullable": true
          },
          "clubName": {
            "type": "string",
            "description": "Name of the club the team is from",
            "nullable": true
          },
          "salutation": {
            "type": "string",
            "description": "Greeting the contact prefers in German language.",
            "nullable": true,
            "example": "Frau"
          },
          "firstName": {
            "type": "string",
            "description": "First name of the contact person.",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "description": "Last name of the contact person.",
            "nullable": true
          },
          "mailAddress": {
            "type": "string",
            "description": "Mail address the contact person prefers to receive mails from us.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Request for updating information for a contact."
      }
    }
  }
}